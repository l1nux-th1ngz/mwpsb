#!/bin/bash

# ğŸ” Identify the first non-system user (excluding nologin/false shells)
username=$(getent passwd {1000..1100} | grep -vE 'nologin|false' | cut -d: -f1 | head -n1)
userhome=$(eval echo "~$username")

usenala="$userhome/.use-nala"
rusenala="/root/.use-nala"
ubashrc="$userhome/.bashrc"
rbashrc="/root/.bashrc"

# ğŸ§ª Check if 'nala' is available
if ! command -v nala >/dev/null; then
  echo "âŒ Nala is not installed. It is required for this to work properly."
  read -p "Would you like to install Nala? (Yy/Nn): " choice
  case "$choice" in
    [Yy]*) sudo apt-get -y install nala ;;
    *) echo "ğŸš« Nala installation declined. Exiting." && exit 1 ;;
  esac
fi

# ğŸ‘¤ User-level nala wrapper
if [ ! -f "$usenala" ]; then
  tee "$usenala" > /dev/null << 'EOF'
apt() {
  command nala "$@"
}

apt-get() {
  command nala "$@"
}

dpkg() {
  command nala dpkg "$@"
}

sudo() {
  if [ "$1" = "apt" ] || [ "$1" = "apt-get" ]; then
    shift
    command sudo nala "$@"
  elif [ "$1" = "dpkg" ]; then
    shift
    command sudo nala dpkg "$@"
  else
    command sudo "$@"
  fi
}
EOF
  echo "[ -f \"$usenala\" ] && . \"$usenala\"" >> "$ubashrc"
  chmod +x "$usenala"
  sudo -u "$username" bash -c "source \"$ubashrc\""
fi

# ğŸ§‘â€ğŸ’» Root-level nala wrapper
if [ ! -f "$rusenala" ]; then
  tee "$rusenala" > /dev/null << 'EOF'
apt() {
  command nala "$@"
}

apt-get() {
  command nala "$@"
}

dpkg() {
  command nala dpkg "$@"
}
EOF
  echo "[ -f \"$rusenala\" ] && . \"$rusenala\"" >> "$rbashrc"
  chmod +x "$rusenala"
  source "$rbashrc"
fi

# ğŸªµ Logging installation
echo "âœ”ï¸  $(date): Installed nala wrapper for user: $username" >> /var/log/nala-wrapper.log

echo "âœ… Nala wrapper installed and configured."
echo "ğŸ› ï¸  Supported commands include: apt, apt-get, dpkg â€” routed to Nala with sudo-awareness."
